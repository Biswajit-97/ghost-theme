<footer class='c-footer'>
  <div class='o-grid'>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l'>
      <p class='c-footer__headline'>{{t 'Tags' }}</p>

      {{#get 'tags' limit='all'}}
        <ul class='c-footer-list o-plain-list'>
          {{#foreach tags}}
            <li><a href='{{ url }}'>{{ name }}</a></li>
          {{/foreach}}
        </ul>
      {{/get}}
    </div>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l'>
      <p class='c-footer__headline'>{{t 'Navigation' }}</p>

      <ul class='c-footer-list o-plain-list'>
          <li class='c-nav__item'>
            <a href='/' class='c-nav__link  c-nav__link--current '>About</a>
          </li>
           <li class='c-nav__item'>
            <a href='/' class='c-nav__link  c-nav__link--current '>Tags</a>
          </li>
           <li class='c-nav__item'>
            <a href='/' class='c-nav__link  c-nav__link--current '>Author</a>
          </li>
          <li class='c-nav__item'>
            <a href='/' class='c-nav__link  c-nav__link--current '>Contact</a>
          </li>
      </ul>
    </div>

   
        <div class='o-grid__col o-grid__col--initial-grow o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l'>
          <p class='c-footer__headline'>{{t 'Subscribe' }}</p>
          {{> subscribe-form}}
        </div>
     

  </div>
</footer>